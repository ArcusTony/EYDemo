<h1>Allotment Sites</h1>

<table >
  <tr>
    <th>Name</th>
    <th>Manager</th>
    <th>Number of Plots</th>
    <th>Used Plots</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.manager %></td>
    <td><%= site.plotsMax %></td>
    <td><%= site.plotsUsed %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

