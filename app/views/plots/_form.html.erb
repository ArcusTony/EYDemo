<%= form_for(@plot) do |f| %>
  <% if @plot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plot.errors.count, "error") %> prohibited this plot from being saved:</h2>

      <ul>
      <% @plot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :site %><br />
    <%= collection_select(:plot, :site, @site_names, :id, :name, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.text_field :size %>
  </div>
  <div class="field">
    <%= f.label :length %><br />
    <%= f.number_field :length %>
  </div>
  <div class="field">
    <%= f.label :width %><br />
    <%= f.number_field :width %>
  </div>
  <div class="field">
    <%= f.label :shed %><br />
    <%= f.check_box :shed %>
  </div>
  <div class="field">
    <%= f.label :"Disabled Access" %><br />
    <%= f.check_box :disabledAccess %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
